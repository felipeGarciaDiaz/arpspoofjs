{
  "compilerOptions": {
    "target": "es2019",           // Set target to match Node.js version, ES2019 supports Node.js 12
    "module": "commonjs",         // CommonJS modules are used by Node.js
    "outDir": "./dist",           // Redirect output structure to the directory
    "rootDir": "./src",           // Specify the root directory of input files
    "strict": true,               // Enable all strict type-checking options
    "esModuleInterop": true,      // Enables module interop support
    "skipLibCheck": true,         // Skip type checking of all declaration files (*.d.ts)
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],        // Include all files in the src folder
  "exclude": ["node_modules"]     // Exclude the node_modules folder
}
